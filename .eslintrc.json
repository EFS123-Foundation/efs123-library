{
  "extends": "@blockone/blockone",
  "overrides": [
    {
      "files": ["**/*.js", "**/*.jsx"],
      "rules": {
        "indent": ["error", 4],
        "no-bitwise": "off",
        "no-var-requires": "off",
        "semi": ["error", "always"]
      }
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "@typescript-eslint/indent": [
              "error",
              4,
              {
                  "VariableDeclarator": 4,
                  "SwitchCase": 0,
                  "FunctionDeclaration": {
                      "parameters": "off"
                  },
                  "FunctionExpression": {
                      "parameters": "off"
                  },
                  "CallExpression": {
                      "arguments": "off"
                  },
                  "ArrayExpression": "off",
                  "ObjectExpression": "off"
              }
          ],
        "@typescript-eslint/semi": ["error", "always"]
      }
    }
  ]
}
